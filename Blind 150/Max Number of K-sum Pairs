# Time Complexity O(nlog(n)) | Space Complexity O(n)
class Solution:
    def maxOperations(self, nums: List[int], k: int) -> int:
        nums.sort()
        i = 0
        j = len(nums) - 1
        res= 0
        while i < j:
            sum = nums[i] + nums[j]
            if sum == k:
                i += 1
                j -= 1
                res += 1
            elif sum < k:
                i += 1
            else:
                j -= 1
        return res
